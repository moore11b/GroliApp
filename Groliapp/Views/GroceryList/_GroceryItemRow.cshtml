@model GroceryItem

<tr id="row-@Model.Id">
    <td>
        @Html.DisplayFor(modelItem => Model.ItemName)
    </td>
    <td>
        $@Html.DisplayFor(modelItem => Model.Amount)
    </td>
    <td>
        <a id="removeGroceryItemBtn" asp-action="Delete" asp-controller="GroceryItem"
           asp-route-id="@Model.Id"
           class="btn btn-danger btn removeBtn">
            Remove
        </a>
</tr>
