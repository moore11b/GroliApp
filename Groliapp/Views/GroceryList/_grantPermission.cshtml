@model Groliapp.Models.ViewModels.UserListVM
<form id="permForm" asp-action="GrantPermission" asp-controller="GroceryList">
    <div id="createPrivUser" class="form-horizontal">
        <div class="form-group">

            <input name="listId" id="createPrivUser" type="hidden" value="@Model.ListId" />
            <h5>Grant Permission</h5>
            <select asp-for="UserId" id="selectValue" class="form-control">
                @foreach (var user in Model.UserList)
                {
                    @if (!Model.PriviledgedUsers.Contains(user.Email))
                    {
                        <option value="@user.Id">@user.UserName </option>
                    }
                }
            </select>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input name="listId" id="grantListId" value="@Model.ListId"
                       asp-for="ListId" type="hidden" />
                <input id="createPrivUser" type="submit" value="Save" class="btn btn-success" />
                <input id="cancelCreate" type="button" value="Cancel" class="btn btn-warning" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}