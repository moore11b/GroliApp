@model GroceryItem

<tr id="row-@Model.Id">


    @if (Model.IsChecked == false)
    {
        <td>
            @Html.DisplayFor(modelItem => Model.ItemName, new { @readonly = "readonly" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Amount, new { @readonly = "readonly" })
        </td>
        <td>
            (Not Checked)
        </td>
        <td>
            <a id="checkGroceryItemBtn" asp-action="CheckItem" asp-controller="GroceryItem"
               asp-route-id="@Model.Id"
               class="btn btn-success btn groceryCheckItemBtn">
                Check
            </a>
        </td>
    }
    else
    {
        <td>
            <p class="bg-secondary text-white">  @Html.DisplayFor(modelItem => Model.ItemName)</p>
        </td>
        <td>
            <p class="bg-secondary text-white">  @Html.DisplayFor(modelItem => Model.Amount)</p>
        </td>
        <td>
            (IsChecked)
        </td>
        <td>
            <a id="checkGroceryItemBtn" asp-action="CheckItem" asp-controller="GroceryItem"
               asp-route-id="@Model.Id"
               class="btn btn-danger btn groceryCheckItemBtn">
                Un-Check
            </a>
        </td>
    }

</tr>


